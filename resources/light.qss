}

QPushButton#CloseButton{
    border-image: url(":/resources/light/window_close_normal.png")
}
QPushButton#CloseButton:hover{
    border-image: url(":/resources/light/window_close_hover.png")
}
QPushButton#CloseButton:pressed{
    border-image: url(":/resources/light/window_close_press.png")
}

QPushButton#MenuButton{
    border-image: url(":/resources/light/window_option_normal.png")
}
QPushButton#MenuButton:hover{
    border-image: url(":/resources/light/window_option_hover.png")
}
QPushButton#MenuButton:pressed{
    border-image: url(":/resources/light/window_option_press.png")
}






QMenu {
    background-color: white;
    padding-top: 4px;
    padding-bottom: 4px;
    border-radius: 5px;
    font-size: 13px;
}

QMenu::item {
    padding: 2px 25px 2px 20px;
    border: none; /* reserve space for selection border */
}

QMenu::item:selected {
    background: #2CA7F8;
    color: white;
}

QMenu::icon {
    margin-left: 5px;
    width: 13px;
    height: 13px;
}

QMenu::icon:checked { /* appearance of a 'checked' icon */
    background: gray;
    border: 1px inset gray;
    position: absolute;
    top: 1px;
    right: 1px;
    bottom: 1px;
    left: 1px;
}

QMenu::separator {
    height: 1px;
    background: rgba(0, 0, 0, 0.1);
    margin: 2px 6px 2px 6px;
}

QMenu::indicator {
    margin-left: 5px;
    width: 13px;
    height: 13px;
}
